#!/usr/bin/env perl6

use v6;

use lib 'lib';
use Haircut;

sub MAIN(Str :$store-file) {
    my $haircut;

    if $store-file {
        $haircut = Haircut.new(:$store-file);
    }
    else {
        $haircut = Haircut.new;
    }

    say $haircut.text-summary;
}

# vim:syntax=perl6:softtabstop=4:shiftwidth=4
