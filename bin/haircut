#!/usr/bin/env perl6

use v6;

use lib 'lib';
use Haircut;

sub MAIN($action, Str :$store-file) {
    my $haircut;

    if $store-file {
        $haircut = Haircut.new(:$store-file);
    }
    else {
        $haircut = Haircut.new;
    }

    given $action {
        when 'summary' {
            say $haircut.text-summary;
        }
        default {
            note "'$action': no such action";
            exit 2;
        }
    }
}

# vim:syntax=perl6:softtabstop=4:shiftwidth=4
